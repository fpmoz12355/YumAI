<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="15dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="12dp"
    card_view:contentPadding="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:padding="10sp"
        android:paddingLeft="5sp">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleRv"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="186dp"
            android:layout_marginTop="41dp"
            android:layout_toRightOf="@+id/imageRv"
            card_view:srcCompat="@drawable/baseline_time_teal_400" />

        <ImageView
            android:id="@+id/imageRv"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:elevation="5dp" />

        <TextView
            android:id="@+id/titleRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/imageRv"
            android:clickable="true"
            android:text="Title"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categoryRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleRv"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imageRv"
            android:text="Category"
            android:textColor="#EABD4E"
            android:textSize="17sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/timeRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleRv"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="43dp"
            android:layout_toRightOf="@+id/imageRv"
            android:text="Time"
            android:textSize="16sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/titleRv"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/imageRv"
            android:foregroundGravity="right"
            card_view:srcCompat="@drawable/round_favorite_border_24" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>